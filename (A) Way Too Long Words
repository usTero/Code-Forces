#include <bits/stdc++.h>
using namespace std;
 
#define str string
 
void solve(int n){
    str a[n];
    for(int i = 0; i < n; i++){
        cin >> a[i];
        int len = a[i].length();
        if(len-2 > 8){
            str b = to_string(len-2);
            a[i].erase(1, len-2);
            a[i].insert(1,b);
        }
    }
    for(int i = 0; i < n; i++){
        cout << a[i] << '\n';
    }
}   
 
int main(){
    int a;
    cin >> a;
    solve(a);
    return 0;
}

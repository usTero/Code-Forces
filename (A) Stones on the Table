#include <bits/stdc++.h>
using namespace std;
 
#define str string
 
void solve(int n){
    int y = 0;
    char x[n];
    for (int i = 0; i < n; i++){
        cin >> x[i];
    }
    for(int i = 0; i < n; i++){
        if(x[i] == x[i+1]){
            y++;
        }else{
            continue;
        }
    }
    cout << y << endl;
} 
 
int main(){
    int a;
    cin >> a ;
    solve(a);
    return 0;
}

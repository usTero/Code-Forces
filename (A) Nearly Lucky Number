#include <bits/stdc++.h>
using namespace std;
 
#define str string
#define ll long long
 
void solve(ll n){
    int count = 0;
    for(char c : to_string(n)){
        if(c == '4' || c == '7'){
            count++;
    }
    }
    if(count == 4 || count == 7){
        cout << "YES\n";
    } else {
        cout << "NO\n";
    }
}
 
int main(){
    ll a;
    cin >> a;
    solve(a);
    return 0;
}

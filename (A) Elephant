#include <bits/stdc++.h>
using namespace std;
 
#define str string
 
void solve(int n){
    int y = 0;
    while(n > 0){
        if(n - 5 >= 0){
            n -= 5;
            y++;
        } else if(n - 4 >= 0){
            n -= 4;
            y++;
        } else if(n - 3 >= 0){
            n -= 3;
            y++;
        } else if(n - 2 >= 0){
            n -= 2;
            y++;
        } else if(n - 1 >= 0){
            n -= 1;
            y++;
        }
    }
    cout << y << endl;
} 
 
int main(){
    int a;
    cin >> a ;
    solve(a);
    return 0;
}
